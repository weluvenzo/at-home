mixin EventForm(event, actionURL, title)

    div.form-panel
        div.header= title
            form(action=actionURL method='post')
                div.form-input
                    label(for='name') Name:
                    input(type='text' id='name' name='name' value=event.name maxlength="30")
                div.form-input
                    label(for='location') Location:
                    input(id='location' name='location' value=event.location maxlength="50")
                div.form-input
                     label(for='zipcode') zipcode
                     select(id='zipcode' name='zipcode' autocomplete='off')
                         each zipcode in zipcodes
                             option(value=zipcode selected = (zipcode === event.zipcode)) #{zipcode}
                div.form-input
                    label(for='date') Date(YYYY-MM-DD):
                    input(id='date' name='date' value=event.date )
                div.form-input
                    label(for='description') Description:
                    textarea(id='description' name='description' maxlength="500") #{event.description}

                div.button-row
                    a.button.cancel(href='/events') Cancel
                    a.button.delete(href=`/delete/${event.id}`) Delete
                    button.button.save(type='submit') Submit
style(type="text/css").
    .button.save{
        background-color: #710586;
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
    }
    .button.delete{
        background-color: #710586;
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
    }
    .button.cancel{
        background-color: #710586;
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;

    }